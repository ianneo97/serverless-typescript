{
    "name": "serverless-typescript",
    "version": "1.0.0",
    "description": "Setup Serverless Project with Typescript capabilities",
    "main": "index.ts",
    "scripts": {
        "test": "echo \"Error: no test specified\"",
        "lint": "eslint --ext .ts functions/",
        "check": "",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ianneo97/serverless-typescript.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ianneo97/serverless-typescript/issues"
    },
    "homepage": "https://github.com/ianneo97/serverless-typescript#readme",
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@types/aws-lambda": "^8.10.102",
        "@types/node": "^18.7.6",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jest": "^26.8.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-security": "^1.5.0",
        "eslint-plugin-you-dont-need-lodash-underscore": "^6.12.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "lint-staged": "^13.0.3",
        "npm-check-updates": "^16.0.5",
        "prettier": "^2.7.1",
        "serverless": "^3.22.0",
        "serverless-offline": "^9.2.4",
        "serverless-plugin-common-excludes": "^4.0.0",
        "serverless-plugin-include-dependencies": "^5.0.0",
        "serverless-plugin-typescript": "^2.1.2",
        "typescript": "^4.7.4"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-case": [
                2,
                "always",
                "lower-case"
            ],
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "chore",
                    "feat",
                    "fix",
                    "refactor",
                    "revert",
                    "test",
                    "deps"
                ]
            ],
            "scope-empty": [
                2,
                "always"
            ],
            "type-empty": [
                2,
                "never"
            ],
            "subject-empty": [
                2,
                "never"
            ],
            "subject-min-length": [
                2,
                "always",
                10
            ],
            "subject-full-stop": [
                2,
                "never",
                "."
            ],
            "subject-case": [
                2,
                "always",
                "lower-case"
            ]
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "npx prettier --write",
            "npx eslint --fix"
        ]
    }
}
